@page
@model DevBlog.Web.Pages.AccountsModel
@{
    ViewData["Title"] = "Accounts";
}

<h1 class="text-center">All Users</h1>
<div class="row">
    <div class="col-md-4 offset-md-4">
        <div class="card">
            <div class="card-body">
                @foreach (var account in Model.Accounts)
                {
                    <a class="text-decoration-none" asp-page="Profile" asp-route-id="@account.Id">
                        <div class="card mb-3">
                            <div class="card-body">
                                <h5 class="card-title text-center">@account.FullName</h5>
                            </div>
                        </div>
                    </a>
                }
            </div>
        </div>
    </div>
</div>